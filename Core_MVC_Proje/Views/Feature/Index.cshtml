@model EntityLayer.Concrate.Feature
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0">Öne Çıkan Post Düzenleme Sayfası</h3>
</div>
@using (Html.BeginForm("Index", "Feature", FormMethod.Post))
{
    <br />
    @Html.HiddenFor(x=>x.FeatureID)
    <br />
    @Html.Label("Başlık")
    @Html.TextBoxFor(x=>x.Header,new{@class="form-control"})
    <br />
    <label>Adı Soyadı</label>
    @Html.TextBoxFor(x=>x.Name,new{@class="form-control"})
    <br />
    <label>İş Açıklama Adı(Geliştirici vs.)</label>
    @Html.TextBoxFor(x=>x.Title,new{@class="form-control"})
    <br />
    <button class="btn btn-success">Güncelle</button>
}