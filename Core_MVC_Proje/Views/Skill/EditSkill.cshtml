@model EntityLayer.Concrate.Skill
@{
    ViewData["Title"] = "EditSkill";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yetenek Güncelleme Formu</h4>
            <form class="forms-sample" method="post">
                    @Html.HiddenFor(x=>x.SkillID)
                <div class="form-group">
                    <label>Başlık</label>
                    @Html.TextBoxFor(x=>x.Title,new {@class="form-control"})
                </div>
                <div class="form-group">
                    <label>Değer</label>
                    @Html.TextBoxFor(x=>x.Value,new {@class="form-control"})
                </div>
                <button type="submit" class="btn btn-primary mr-2">Güncelle</button>
                <button href="/Skill/Index" class="btn btn-dark">İptal</button>
            </form>
        </div>
    </div>
</div>