@model EntityLayer.Concrate.Experience
@{
    ViewData["Title"] = "EditExperience";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
@using (Html.BeginForm("EditExperience", "Experience", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Deneyim Güncelleme Formu</h4>
                <form class="forms-sample">
                    <div class="form-group">
                        <label>ID</label>
                        @Html.TextBoxFor(x=>x.ExperienceID,new {@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label>Başlık</label>
                        @Html.TextBoxFor(x=>x.Name,new {@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label>Tarih</label>
                        @Html.TextBoxFor(x=>x.Date,new {@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label>Görsel URL</label>
                        @Html.TextBoxFor(x=>x.ImageUrl,new {@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label>Açıklama</label>
                        @Html.TextAreaFor(x=>x.Description,10,4,new {@class="form-control"})
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Güncelle</button>
                </form>
                <button href="/Experience/Index" class="btn btn-dark">İptal</button>
            </div>
        </div>
    </div>
}

