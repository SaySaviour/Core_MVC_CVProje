@model EntityLayer.Concrate.Experience
@{
    ViewData["Title"] = "AddExperience";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0">Deneyim Ekleme</h3>
</div>
@using(Html.BeginForm("AddExperience","Experience",FormMethod.Post))
{
    @Html.Label("Deneyim ADI")
    @Html.TextAreaFor(x=>x.Name, new{@class ="form-control"})
    <br />
    <label>Tarih</label>
    @Html.TextAreaFor(x=>x.Date, new{@class ="form-control"})
    <br />
    <label>Resim Yükle</label>
    <input type="file" name="ImageUrl" class="form-control" />
    <br />
    <label>Açıklama</label>
    @Html.TextAreaFor(x=>x.Description,10,3, new{@class ="form-control"})
    <br />
    <button class="btn btn-primary">Kaydet</button>
}
   

