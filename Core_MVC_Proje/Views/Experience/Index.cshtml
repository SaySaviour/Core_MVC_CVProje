@using EntityLayer.Concrate
@model List<Experience>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0">Deneyim Listesi Tablosu</h3>
</div>
<div class="table-responsive">
    <table class="table align-items-center table-flush">
        <thead class="thead-light">
            <tr>
                <th scope="col" class="sort" data-sort="status">ID</th>
                <th scope="col" class="sort" data-sort="budget">Deneyim Adı</th>
                <th scope="col" class="sort" data-sort="status">Tarih</th>
                <th scope="col" class="sort" data-sort="status">Resim</th>
                <th scope="col" class="sort" data-sort="status">Açıklama</th>
                <th scope="col">Sil</th>
                <th scope="col" class="sort" data-sort="completion">Düzenle</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody class="list">
            @foreach (var item in Model)
            {
                <tr>
                    <th>
                        @item.ExperienceID
                    </th>
                    <td class="budget">
                        @item.Name
                    </td>
                        <td class="budget" >
                        @item.Date
                    </td>
                    <td class="budget">
                       <img src="@item.ImageUrl" width="50" height="50"/>
                    </td>
                    <td class="budget" >
                        @item.Description
                    </td>
                    <td><a href="/Experience/DeleteExperience/@item.ExperienceID" class="btn btn-danger">Sil</a></td>
                    <td><a href="/Experience/EditExperience/@item.ExperienceID" class="btn btn-success">Güncelle</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
<br />
<a href="/Experience/AddExperience/" class="btn btn-primary">Yeni Deneyim Ekle</a>
